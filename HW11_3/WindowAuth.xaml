<Window x:Class="HW11_3.WindowAuth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW11_3"
        mc:Ignorable="d"
        Title="Авторизация" Height="200" Width="300" WindowStyle="SingleBorderWindow"
        MinHeight="200" MinWidth="300" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" 
                       HorizontalAlignment="Center"
                       Margin="5"/>
            <TextBox x:Name="TB_UserName" 
                     HorizontalAlignment="Center"                     
                     Width="120"
                     Margin="5"/>

            <Button x:Name="BTN_Auth" 
                    Content="Войти" 
                    Width="120" 
                    HorizontalAlignment="Center"
                    Margin="5"
                    Click="BTN_Auth_Click"/>
            <TextBlock x:Name="TB_Info" Margin="5"/>
        </StackPanel>

    </Grid>
</Window>
